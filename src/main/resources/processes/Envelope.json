{
  "name": "Envelope",
  "description": "Create a layer from an environmental envelope definition.",
  "isBackground": false,
  "version": 1.0,
  "private": {
    "unique": false,
    "public": true
  },
  "input": {
    "envelope": {
      "description": "Layer and ranges used to define the envelope",
      "type": "envelope",
      "constraints": {
        "min": 1
      }
    },
    "resolution": {
      "description": "The layer resolution to use.",
      "type": "double",
      "constraints": {
        "min": 0.01,
        "max": 1.0,
        "default": 0.5
      }
    },
    "shp": {
      "description": "Produce a shapefile.",
      "type": "boolean",
      "constraints": {
        "default": false
      }
    }
  },
  "output": {
    "layer": {
      "description": "Output layer."
    },
    "metadata": {
      "description": "Envelope metadata."
    }
  }
}