<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <conversionRule conversionWord="clr" converterClass="org.springframework.boot.logging.logback.ColorConverter"/>
    <conversionRule conversionWord="wex"
                    converterClass="org.springframework.boot.logging.logback.WhitespaceThrowableProxyConverter"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <charset>UTF-8</charset>
            <pattern>%clr(%d{yyyy-MM-dd HH:mm:ss.SSS}){faint} %clr(%5p) %clr(%logger{39} [%file:%line]){cyan} %clr(:){faint} %m%n%wex</pattern>
        </encoder>
    </appender>

    <logger name="org.hibernate.orm.deprecation" level="ERROR"/>
    <logger name="org.hibernate.orm" level="ERROR" />
    <logger name="org.grails.config.NavigableMap" level="ERROR" />
    <logger name="org.springframework" level="ERROR"/>
    <logger name="grails.app" level="ERROR"/>
    <logger name="grails.plugins.mail" level="ERROR"/>
    <logger name="org.quartz" level="ERROR"/>
    <logger name="asset.pipeline" level="ERROR"/>
    <logger name="au.org.ala.cas" level="WARN"/>
    <logger name="au.org.ala.spatial" level="WARN"/>
    <logger name="org.liquibase" level="WARN"/>
    <logger name="liquibase" level="WARN"/>
    <logger name="org.pac4j.oidc.profile.creator.TokenValidator" level="ERROR"/>

    <root level="WARN">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>
